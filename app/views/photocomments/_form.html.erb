<div class="form-block">
<%= form_for [@photo, @photo.photocomments.build], class: "form-horizontal" do |f| %> 
  <h4>Добавьте комментарий:</h4>
  <div class="form-group row">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div> 
  <div class="form-group row">
    <%= f.label :score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p><i>Оцените фото, в баллах: от 1 до 5</i></p>
      <%= f.text_field :score, class: "form-control txt-field" %>
      <%= f.submit("Добавить комментарий", class: "btn btn-primary") %>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
   <%= f.hidden_field :photo_id, value: @photo.id %>  
<% end %>
</div>

